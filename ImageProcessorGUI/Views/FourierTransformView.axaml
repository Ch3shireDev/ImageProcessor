<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ImageProcessorGUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ImageProcessorGUI.Views.FourierTransformView"
        Title="FourierTransformView">
	<DockPanel>
		<Label>Manipulacja widmem w celu usuwania zakłóceń periodycznych</Label>
		<DockPanel>
			<DockPanel>
			<Label>Widmo amplitudowe przed obróbką</Label>
			<Image Source="{Binding FourierAmplitudeBefore}"/>
			</DockPanel>
			<DockPanel>
			<Label>Widmo amplitudowe po obróbce</Label>
			<Image Source="{Binding FourierAmplitudeAfter}"/>
			</DockPanel>
		</DockPanel>
		<DockPanel></DockPanel>
		<DockPanel>
			<Button Command="{Binding RefreshCommand}">Wyświetl</Button>
		</DockPanel>
	</DockPanel>
</Window>
